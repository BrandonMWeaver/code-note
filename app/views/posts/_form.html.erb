<div class="input-wrapper">
	<% if @post.errors[:language].any? %>
		<% @post.errors[:language].each do |message| %>
			<%= f.label :language, "Language -> #{message}" %>
		<% end %>
	<% else %>
		<%= f.label :language %>
	<% end %>
	<br>
	<%= collection_select :post, :language_id, Language.all, :id, :name %>
</div>
